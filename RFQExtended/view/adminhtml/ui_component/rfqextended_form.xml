<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">rfqextended_form.rfqextended_form_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Magento\Company\Block\Adminhtml\Edit\SaveButton"/> <!-- Need to Update -->
            <button name="delete" class="Magento\Company\Block\Adminhtml\Edit\DeleteButton"/> <!-- Need to Update -->
            <button name="back" class="Magento\Company\Block\Adminhtml\Edit\BackButton"/> <!-- Need to Update -->
        </buttons>
        <namespace>rfqextended_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>rfqextended_form.rfqextended_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="rfqextended_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>

        <dataProvider class="Codilar\RFQExtended\Model\DataProvider" name="rfqextended_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <collapsible>false</collapsible>
            <label/>
            <dataScope>general</dataScope>
        </settings>

        <field name="customer_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer_id</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Customer ID</label>
            </settings>
        </field>

        <field name="quote_name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">quote_name</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Quote Name</label>
            </settings>
        </field>

        <field name="state" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">state</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">State</label>
            </settings>
        </field>

    </fieldset>
</form>
